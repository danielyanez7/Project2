<div class="row justify-content-center mt-5">
    {{#each workdays}}
    <div class="col-sm-4 my-3">
        <div class="card h-100 card-gray">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <form action="/clients/submit-exercise/{{../routine._id}}/{{name}}" method="post">
                    <div class="form-group m-2">
                        <label for="exercise-select" class="m-2">Select an exercise</label>
                        <select id="exercise-select" name="exercise" class="form-control">
                            {{#each ../infoExercises}}
                            <option value="{{exerciseName}}">{{exerciseName}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group m-2">
                        <label for="exercise-reps" class="m-2">Reps:</label>
                        <input type="number" id="exercise-reps" name="reps" min="0" class="form-control" required>
                    </div>
                    <div class="form-group text-center mt-3">
                        <button type="submit" class="btn btn-dark">Add New Exercise</button>
                    </div>
                </form>
                <hr>
                <h4>WOD</h4>
                {{#each dailyRoutine}}
                {{#each this.exercises}}
                <div class="d-flex justify-content-between align-items-center">
                    <p class="m-2">{{this}}</p>
                    <form action="" method="POST">

                        <input type="submit" value="Delete" class="btn btn-dark btn-outline-danger p-1 m-2"
                            onclick="alert('NOT YET'); var audio = new Audio('../../images/jc.mp3'); audio.play(); return false;">

                    </form>
                </div>
                {{/each}}
                {{/each}}
            </div>
        </div>
    </div>
    {{/each}}
</div>