<div class="row justify-content-center mt-5">
    {{#each clients}}
    <div class="col-sm-3 my-3">
        <div class="card h-100 card-gray">
            <img src="{{imageUrl}}" class="card-img-top" alt="..."
                style="object-fit: contain; width: 100%; height: 200px;">
            <div class="card-body text-center">
                <h5 class="card-title">{{username}}</h5>
                <div class="d-grid gap-2 mt-3 mb-2">
                    <a href="/clients/name-clientroutine/{{id}}" class="btn btn-dark">Create Routine</a>
                    <a href="/user/routine-list/{{id}}" class="btn btn-dark">See routines</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>